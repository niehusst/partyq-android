<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="songName"
            type="String" />
        <variable
            name="songArtist"
            type="String" />
        <variable
            name="songLink"
            type="String" />
        <variable
            name="isHost"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/spotify_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mediumPadding"
            android:text="@{String.format(@string/see_song_on_spotify_at_link, songLink)}"
            android:textColor="@color/onBackgroundColorLight"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toTopOf="@id/album_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="See song on Spotify at: " />

        <ImageView
            android:id="@+id/album_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/largePadding"
            android:layout_marginEnd="@dimen/largePadding"
            android:layout_marginBottom="@dimen/mediumPadding"
            android:importantForAccessibility="no"
            android:src="@color/backgroundColor"
            app:layout_constraintBottom_toTopOf="@id/song_title"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spotify_link" />

        <TextView
            android:id="@+id/song_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{songName}"
            android:textSize="@dimen/textLarge"
            app:layout_constraintBottom_toTopOf="@id/song_artists"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/album_image"
            tools:text="Title" />

        <TextView
            android:id="@+id/song_artists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/largePadding"
            android:text="@{songArtist}"
            app:layout_constraintBottom_toTopOf="@id/play_toggle_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/song_title"
            tools:text="Artist" />

        <!-- song progress here?? -->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/play_toggle_button"
            android:layout_width="@dimen/largeThumbnailWH"
            android:layout_height="@dimen/largeThumbnailWH"
            android:src="@drawable/ic_baseline_play_arrow_24"
            app:layout_constraintBottom_toTopOf="@id/skip_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/song_artists"
            isGone="@{!isHost}"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/skip_button"
            style="@style/PartyqButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mediumPadding"
            android:text="@string/skip_song"
            app:icon="@drawable/ic_baseline_skip_next_24"
            app:iconGravity="end"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/album_image"
            app:layout_constraintStart_toStartOf="@id/album_image"
            app:layout_constraintTop_toBottomOf="@id/play_toggle_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>